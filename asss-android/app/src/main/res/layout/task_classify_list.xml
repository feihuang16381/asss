<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_popup_bg"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/allSite"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_task_clsfy_allSite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="8"
                android:text="@string/all"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/img_task_clsfy_allSite"
                android:layout_width="0dp"
                android:layout_height="9dp"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_classify"
                android:visibility="invisible"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/dg_inspect"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="#FFFFFF">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="8"
                android:text="@string/dg_inspect"
                android:textSize="13sp"
                android:id="@+id/tv_task_clsfy_dg_inspect" />

            <ImageView
                android:id="@+id/img_task_clsfy_dg_inspect"
                android:layout_width="0dp"
                android:layout_height="9dp"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_classify"
                android:visibility="invisible"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/dg_maintain"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="8"
                android:text="@string/dg_maintain"
                android:textSize="13sp"
                android:id="@+id/tv_task_clsfy_dg_maintain"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="9dp"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_classify"
                android:id="@+id/img_task_clsfy_dg_maintain"
                android:visibility="invisible"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dg_stand"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="8"
                android:text="@string/dg_stand"
                android:textSize="13sp"
                android:id="@+id/tv_task_clsfy_dg_stand"/>

            <ImageView
                android:id="@+id/img_task_clsfy_dg_stand"
                android:layout_width="0dp"
                android:layout_height="9dp"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_classify"
                android:visibility="invisible"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/cm_maintain"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="8"
                android:text="@string/cm_maintain"
                android:textSize="13sp"
                android:id="@+id/tv_task_clsfy_cm_maintain"/>

            <ImageView
                android:id="@+id/img_task_clsfy_cm_maintain"
                android:layout_width="0dp"
                android:layout_height="9dp"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_classify"
                android:visibility="invisible"/>
        </LinearLayout>

</LinearLayout>