<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/et_no_focus_color">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_margin="1dp"
        android:background="@color/white">
        
        <LinearLayout
            android:id="@+id/other"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            
            <TextView
                android:id="@+id/other_name"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="其他"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/stationInfo"/>
            <ImageView
                android:id="@+id/other_draw"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_classify"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/danger_source"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/danger_name"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="危险源"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:textColor="@color/stationInfo"/>
            <ImageView
                android:id="@+id/danger_draw"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:src="@drawable/ic_classify"/>
        </LinearLayout>
        
    </LinearLayout>
</LinearLayout>