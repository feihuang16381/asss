<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/ic_popup_bg"
    app:cardCornerRadius="2dp">


        <LinearLayout
            android:id="@+id/allSite"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_allSite"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/all"
                android:textSize="13sp" />
            <ImageView
                android:id="@+id/img_allSite"
                android:layout_width="0dp"
                android:layout_height="9dp"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_classify"
                android:visibility="invisible"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/dangerSource"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_dg_source"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/danger"
                android:textSize="13sp" />
            <ImageView
                android:id="@+id/img_dg_source"
                android:layout_width="0dp"
                android:layout_height="9dp"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_classify"
                android:visibility="invisible"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/other"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_other"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/other"
                android:textSize="13sp" />
            <ImageView
                android:id="@+id/img_other"
                android:layout_width="0dp"
                android:layout_height="9dp"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_classify"
                android:visibility="invisible"/>
        </LinearLayout>

</LinearLayout>